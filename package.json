{
  "name": "circomkit",
  "version": "0.0.21",
  "description": "A Circom development environment",
  "author": "erhant",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "homepage": "https://github.com/erhant/circomkit#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/erhant/circomkit.git"
  },
  "bugs": {
    "url": "https://github.com/erhant/circomkit/issues/"
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.build.json",
    "prebuild": "rimraf dist/",
    "cli": "yarn build && node ./dist/bin",
    "test": "npx mocha",
    "pretest": "rimraf build/",
    "check": "npx tsc --noEmit",
    "style": "yarn format && yarn lint",
    "lint": "npx eslint '**/*.ts' && echo 'All good!'",
    "format": "npx prettier --check ./src/**/*.ts ./tests/**/*.ts"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.11.0",
    "@parcel/packager-ts": "^2.11.0",
    "@parcel/transformer-typescript-tsc": "^2.11.0",
    "@parcel/transformer-typescript-types": "^2.11.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/mocha-each": "^2.0.0",
    "@types/node": "^18.11.18",
    "@types/snarkjs": "^0.7.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^10.2.0",
    "mocha-each": "^2.0.1",
    "parcel": "^2.11.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "chai": "^4.3.7",
    "circom_tester": "^0.0.19",
    "loglevel": "^1.8.1",
    "snarkjs": "^0.7.0"
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "printWidth": 120
  },
  "keywords": [
    "circom",
    "zero knowledge",
    "snarkjs",
    "typescript",
    "cli",
    "tooling",
    "blockchain"
  ],
  "source": "src/index.ts",
  "types": "lib/index.d.ts",
  "cjs": "lib/index.cjs",
  "mjs": "lib/index.mjs",
  "bin": "lib/bin/index.mjs",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs",
    "default": "./lib/index.mjs"
  },
  "browser": {
    "child_process": false
  },
  "targets": {
    "cjs": {
      "outputFormat": "commonjs",
      "isLibrary": false,
      "context": "node",
      "scopeHoist": false,
      "includeNodeModules": false,
      "optimize": false
    },
    "mjs": {
      "outputFormat": "esmodule",
      "isLibrary": false,
      "context": "node",
      "scopeHoist": false,
      "includeNodeModules": false,
      "optimize": false
    },
    "bin": {
      "source": "./src/bin/index.ts",
      "outputFormat": "esmodule",
      "context": "node",
      "scopeHoist": false,
      "includeNodeModules": false
    }
  }
}
